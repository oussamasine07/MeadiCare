<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
    xmlns="http://java.sun.com/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
     version="3.0"
>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.medicare.home.controller.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>IndexServletDoctor</servlet-name>
    <servlet-class>com.medicare.doctor.controller.IndexServletDoctor</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexServletDoctor</servlet-name>
    <url-pattern>/doctor</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CreateServletDoctor</servlet-name>
    <servlet-class>com.medicare.doctor.controller.CreateServletDoctor</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateServletDoctor</servlet-name>
    <url-pattern>/doctor/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>IndexPatientServlet</servlet-name>
    <servlet-class>com.medicare.patient.controller.IndexPatientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexPatientServlet</servlet-name>
    <url-pattern>/patient</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CreatePatientServlet</servlet-name>
    <servlet-class>com.medicare.patient.controller.CreatePatientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreatePatientServlet</servlet-name>
    <url-pattern>/patient/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>IndexAppointmentServlet</servlet-name>
    <servlet-class>com.medicare.appointment.controller.IndexAppointmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexAppointmentServlet</servlet-name>
    <url-pattern>/appointment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>IndexDoctorAppointmentServlet</servlet-name>
    <servlet-class>com.medicare.appointment.controller.IndexDoctorAppointmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexDoctorAppointmentServlet</servlet-name>
    <url-pattern>/appointment/doctor</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>IndexPatientAppointmentServlet</servlet-name>
    <servlet-class>com.medicare.appointment.controller.IndexPatientAppointmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexPatientAppointmentServlet</servlet-name>
    <url-pattern>/appointment/patient</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CreatePatientAppointmentServlet</servlet-name>
    <servlet-class>com.medicare.appointment.controller.CreatePatientAppointmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreatePatientAppointmentServlet</servlet-name>
    <url-pattern>/appointment/patient/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CancelPatientAppointmentServlet</servlet-name>
    <servlet-class>com.medicare.appointment.controller.CancelPatientAppointmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CancelPatientAppointmentServlet</servlet-name>
    <url-pattern>/appointment/cancel</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PostponeAppointmentServlet</servlet-name>
    <servlet-class>com.medicare.appointment.controller.PostponeAppointmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostponeAppointmentServlet</servlet-name>
    <url-pattern>/appointment/postpone</url-pattern>
  </servlet-mapping>



</web-app>
